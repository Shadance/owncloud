#!/opt/app/owncloud/bin/php-runner
<?php
require_once '/opt/app/owncloud/owncloud/lib/base.php';

if ($argc > 1) {
    echo("setting ".$argv[1]." = ".$argv[2]."\n");
    \OC::$server->getConfig()->setSystemValue($argv[1], $argv[2]);
} else {
    echo("usage: ".$argv[0]." key value\n");
    exit(1);
}