#!/opt/app/owncloud/bin/php-runner
<?php
require_once '/opt/app/owncloud/owncloud/lib/base.php';

function set($name, $value) {
    echo("setting ".$name." = ".$value."\n");
    \OC::$server->getConfig()->setSystemValue($name, $value);
}

if ($argc > 1) {
    set('overwritehost', $argv[1]);
    set('overwritewebroot', $argv[2]);
} else {
    echo("usage: ".$argv[0]." overwritehost overwritewebroot\n");
    exit(1);
}