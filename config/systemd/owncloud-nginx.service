[Unit]
Description=ownCloud nginx
Requires=owncloud-php-fpm.service
After=owncloud-php-fpm.service

[Service]
User=owncloud
Type=forking
PIDFile=/opt/app/owncloud/nginx/logs/nginx.pid
ExecStartPre=/opt/app/owncloud/nginx/sbin/nginx -t -c /opt/app/owncloud/config/nginx.conf
ExecStart=/opt/app/owncloud/nginx/sbin/nginx -c /opt/app/owncloud/config/nginx.conf
ExecReload=/opt/app/owncloud/nginx/sbin/nginx -c /opt/app/owncloud/config/nginx.conf -s reload
ExecStop=/opt/app/owncloud/nginx/sbin/nginx -c /opt/app/owncloud/config/nginx.conf -s stop

[Install]
WantedBy=multi-user.target